{
  "name": "ROS 2 Workspace",
  "remoteUser": "rosdev",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "USERNAME": "rosdev"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
      ]
    }
  },
  "containerEnv": {
    "DISPLAY": "unix:0",
    "ROS_AUTOMATIC_DISCOVERY_RANGE": "LOCALHOST",
    "ROS_DOMAIN_ID": "42"
  },
  "workspaceFolder": "/home/rosdev/ros2_ws",
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/rosdev/ros2_ws/,type=bind",
  "mounts": [
    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
    "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.ssh,target=/home/rosdev/.ssh,type=bind,consistency=cached"
  ],
  "runArgs": [
    "--net=host",
    "--pid=host",
    "--ipc=host",
    "-e",
    "DISPLAY=${env:DISPLAY}"
  ]
}
